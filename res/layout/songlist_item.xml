<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section_headerview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/base_dark"
        android:background="@drawable/section_border"
        android:paddingBottom="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/section_headerview"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/song_textView"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_weight="8"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/song_duration_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="3"
                android:lines="1"
                android:maxLength="5"
                android:gravity="right"
                android:text="I"
                android:textColor="#a69b9b"
                android:paddingRight="3dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/song_album_textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="I"
                android:textColor="#a69b9b"
                android:paddingRight="3dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>